{
    "manifest_version": 3,
    "name": "Ticket system expansion pack",
    "version": "1.0",
    "description": "A few extra features for your system, made by Lidor Levi and Daniel Zin",
    "icons": {},
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://pniot.ariel.ac.il/Projects/tzmm/Add_Get_Tickets.asp*",
        "https://translation.googleapis.com/"
    ],
    "web_accessible_resources": [
        {
            "resources": ["img/excel.png"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "https://pniot.ariel.ac.il/Projects/tzmm/Add_Get_Tickets.asp*",
                "https://pniot.ariel.ac.il/projects/tzmm/Add_Get_Tickets.asp*"
            ],
            "js": [
                "js/services/util.service.js",
                "js/services/ticket.service.js",
                "js/services/location.service.js",
                "js/services/fetch.service.js",
                "js/services/translate.service.js",
                "js/lib/xlsx-min.js",
                "js/excel-btn.js",
                "js/main.js",
                "js/location-fetch.js",
                "js/translate.js"
            ],
            "css": ["css/style.css"],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://pniot.ariel.ac.il/Projects/tzmm/Tickets_Application.asp*",
                "https://pniot.ariel.ac.il/projects/tzmm/Tickets_Application.asp*",
                "https://pniot.ariel.ac.il/Projects/tzmm/Add_Get_Tickets.asp*",
                "https://pniot.ariel.ac.il/projects/tzmm/Add_Get_Tickets.asp*"
            ],
            "js": [
                "js/services/util.service.js",
                "js/services/ticket.service.js",
                "js/services/location.service.js",
                "js/services/fetch.service.js",
                "js/lib/xlsx-min.js",
                "js/excel-btn.js"
            ],
            "css": ["css/style.css"],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://pniot.ariel.ac.il/Projects/tzmm/Tickets_Application.asp*",
                "https://pniot.ariel.ac.il/projects/tzmm/Tickets_Application.asp*"
            ],
            "js": [
                "js/services/util.service.js",
                "js/services/label.service.js",
                "js/services/location.service.js",
                "js/services/fetch.service.js",
                "js/labels.js",
                "js/location-fetch.js"
            ],
            "css": ["css/style.css"],
            "run_at": "document_end"
        }
    ]
}
